<%- include ("partials/header") -%>

    <div id="content-header" style="margin-left: 20px;width:300px;">
        <h6>Course ID</h6>
        <nav class="navbar navbar-expand-lg" id="search-list"
            style="height:35px; font-size:20px;background-image:linear-gradient(90deg,#05a7e7,#2a26ff);">
            <a class="navbar-brand" href="#"
                style="color: beige; margin-left:10%; font-size:20px; font: width 5%;">Marks and Grades</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <i class="fa fa-angle-down"
                style="width:50px; padding-top:15px; margin-left:20px; height:50px;color:white; float:left;"></i>
        </nav>
    </div>

    <div style="margin-left: 40px; margin-top:30px;width:1200px;background-color: #45b1ef;">
        <nav class="navbar navbar-expand-lg" id="search-list">
            <div>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <form class="form-inline my-2 my-lg-0" action="/get_attendance_list" method="get">
                        <input class="form-control mr-sm-2" style="display: float; margin-left:30px;width:200px;" id="attdate" name="attdate" type="date" placeholder="Choose date" aria-label="testnum" />
                        <input class="form-control mr-sm-2" style="display: float; margin-left:30px;width:200px;" id="speriod" name="speriod" type="number" placeholder="Start Period" aria-label="testnum" />
                        <input class="form-control mr-sm-2" style="display: float; margin-left:30px;width:200px;" id="eperiod" name="eperiod" type="number" placeholder="End Period" aria-label="testnum" />
                        <button id="addtest" class="btn btn-light" type="submit" style="display: float; margin-left:10px;">
                            Add/Edit Attendance
                        </button>
                    </form>
                </div>
            </div>
            <br />
            
        </nav>
        <h6 style="margin-left: 150px; color:white;"><%= addmsg %></h6>
    </div>
    <% if(isstatic) { %>
    <div id="disp-content">
        <div id="course-text" class="disp-text" style="width: 1200px; margin-left:40px;height:540px;">

            
            <div class="list-group" id="mark-list" style="overflow: scroll;height:460px;">
                <% for(var i=0;i < attlist.length;i++) { %>
                    <li class="list-group-item">
                        <form action="/update_attendance" method="post">
                            
                            <input type="text" class="form-control score" style="float:left;margin-left:20px;width:200px;" id="roll_number" name="roll_number" value="<%= attlist[i]['roll_number'] %>" readonly>
                            <input type="text" class="form-control score" style="float:left;margin-left:20px;width:200px;" id="attdate" name="attdate" value="<%= attlist[i]['att_date'] %>" readonly>
                            <input type="text" class="form-control score" style="float:left;margin-left:20px;width:100px;" id="speriod" name="speriod" value="<%= attlist[i]['s_period'] %>" readonly>
                            <input type="text" class="form-control score" style="float:left;margin-left:20px;width:100px;" id="eperiod" name="eperiod" value="<%= attlist[i]['e_period'] %>" readonly>
                            <input type="text" class="form-control score" style="float:left;margin-left:20px;width:100px;" id="classes" name="classes" value="<%= attlist[i]['classes'] %>">
                            <button id="update" class="btn btn-primary" type="submit" style="display:float; margin-left:15%;margin-bottom:10px;">
                                Update
                            </button>    
                        </form>
                    </li>
                <% } %>
            </div>
          
            <h6 style="margin-left: 35%;background-color:transparent;"><%= update %></h6>
           
        </div>
            
    <% } %>

    </div>
    

    <%- include ("partials/footer") -%>