<%- include ("partials/header") -%>

<div style="padding: 5% 2%;">
    <div class="table-wrapper-scroll-y my-custom-scrollbar">
        <table class="table table-hover table-light table-striped">
            <thead class="thead-dark ">
                <tr>
                    <th scope="col">#</th>
                    <th style="width: 65%;" scope="col">Title</th>
                    <th scope="col">Date</th>

                </tr>
    
            </thead>
            <tbody>
                <% if (posts.length !=0) { var i=1; posts.forEach(function(data){ %>
                    <tr>
                        <td>
                            <%= i; %>
                        </td>
                        <td>
                            <a style="color: rgb(27, 26, 26);" href="/notifications/<%= data.id %>"><%= data.title %></a>
                        </td>
                        <td>
                            <%= data.date %>
                        </td>
    
                    </tr>
                    <% i++; }) %>
                        <% } else{ %>
                            <tr>
                                <td colspan="7"> - No announcements or circulars yet - </td>
                            </tr>
                            <% } %>
            </tbody>
        </table>
    
    </div>
    <br><br>

    <a href="/" class="btn btn-dark" style="width: 15%;"><i class="fas fa-chevron-left"></i> <span style="margin-left: 10%;">Back to home</span> </a>

</div>




<%- include ("partials/footer") -%>